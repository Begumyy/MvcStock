@using MvcStock.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<CATEGORIES>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>CATEGORY ID</th>
        <th>CATEGORY NAME</th>
        <th>DELETE</th>
        <th>UPDATE</th>
    </tr>
    <tbody>
        @foreach(var ktgr in Model)
         {
                <tr>
                    <th>@ktgr.KATEGORIID</th>
                    <td>@ktgr.KATEGORIAD</td>
                    <td><a href="/CATEGORY/DELETE/@ktgr.KATEGORIID" class="btn btn-danger">DELETE</a></td>
                    <td><a href="/CATEGORY/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">UPDATE</a></td>
                </tr>
         }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa}))
<a href="/CATEGORY/YeniKategori/" class="btn btn-primary">ADD NEW CATEGORY</a>


